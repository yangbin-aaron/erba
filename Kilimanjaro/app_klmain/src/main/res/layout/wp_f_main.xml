<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#FFF7EA" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="购卡急速充,折扣多多,优惠多多!"
                android:textColor="#FFBD56"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/wp_i_1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/wp_t_fee"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="50元"
                    android:textColor="#FF5A00"
                    android:textSize="14sp" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:paddingTop="1dp" >

                    <TextView
                        android:id="@+id/wp_t_money"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="原价50元"
                        android:textColor="#FFFFFF"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/wp_l_0"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="#FFFFFF" />
                </FrameLayout>
            </LinearLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/wp_i_2"
                android:gravity="center"
                android:text="150元"
                android:textColor="#D2D2D2"
                android:textSize="14sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/wp_i_2"
                android:gravity="center"
                android:text="200元"
                android:textColor="#D2D2D2"
                android:textSize="14sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/wp_i_2"
                android:gravity="center"
                android:text="300元"
                android:textColor="#D2D2D2"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#E3E6EA" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:text="付款方式"
                android:textColor="#666666"
                android:textSize="15sp" />

            <RadioGroup
                android:id="@+id/wp_f_stype"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/wp_rb_0"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@drawable/wp_r_1"
                    android:gravity="center_vertical"
                    android:text="微信付"
                    android:textColor="@android:color/black"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/wp_rb_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@drawable/wp_r_1"
                    android:checked="true"
                    android:gravity="center_vertical"
                    android:text="支付宝"
                    android:textColor="@android:color/black"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/wp_rb_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@drawable/wp_r_1"
                    android:gravity="center_vertical"
                    android:text="银联付"
                    android:textColor="@android:color/black"
                    android:textSize="15sp" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#E3E6EA" />

        <LinearLayout
            android:id="@+id/wp_r_sb"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:text="使用快捷支付"
                    android:textColor="#FF5A00"
                    android:textSize="15sp" />

                <com.wo.plugin.szf.SwitchButton
                    android:id="@+id/switchview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:gravity="center" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="#E3E6EA" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/wp_c_0"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:button="@drawable/wp_r_0"
            android:checked="true"
            android:text="自动完成支付"
            android:textColor="#666666"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#E3E6EA" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <CheckBox
                android:id="@+id/wp_c_1"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:button="@drawable/wp_r_0"
                android:checked="true"
                android:gravity="center_vertical"
                android:text="已阅读并同意"
                android:textColor="#666666"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/wp_b_help"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="《用户服务章程》"
                android:textColor="#FF5A00"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/wp_b_b0"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/wp_b_0"
        android:text="确认支付"
        android:textColor="@android:color/white"
        android:textSize="15dp"
        android:textStyle="bold" />

</RelativeLayout>