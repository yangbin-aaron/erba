<?xml version="1.0" encoding="utf-8"?>
<!--自定义数字键盘-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_my_keyboard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_line"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:visibility="gone">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/keyboard_textview_height">

        <TextView
            android:id="@+id/key_1"
            style="@style/StyleMyKeyboardTextView"
            android:text="1"/>

        <TextView
            android:id="@+id/key_2"
            style="@style/StyleMyKeyboardTextView"
            android:text="2"/>

        <TextView
            android:id="@+id/key_3"
            style="@style/StyleMyKeyboardTextView"
            android:text="3"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/keyboard_textview_height">

        <TextView
            android:id="@+id/key_4"
            style="@style/StyleMyKeyboardTextView"
            android:text="4"/>

        <TextView
            android:id="@+id/key_5"
            style="@style/StyleMyKeyboardTextView"
            android:text="5"/>

        <TextView
            android:id="@+id/key_6"
            style="@style/StyleMyKeyboardTextView"
            android:text="6"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/keyboard_textview_height">

        <TextView
            android:id="@+id/key_7"
            style="@style/StyleMyKeyboardTextView"
            android:text="7"/>

        <TextView
            android:id="@+id/key_8"
            style="@style/StyleMyKeyboardTextView"
            android:text="8"/>

        <TextView
            android:id="@+id/key_9"
            style="@style/StyleMyKeyboardTextView"
            android:text="9"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/keyboard_textview_height">

        <RelativeLayout
            android:id="@+id/key_hide"
            style="@style/StyleMyKeyboardTextView">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_down"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/key_0"
            style="@style/StyleMyKeyboardTextView"
            android:text="0"/>

        <RelativeLayout
            android:id="@+id/key_delete"
            style="@style/StyleMyKeyboardTextView">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mode_manage_delete"
                android:textColor="@color/black_text"/>
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
