<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_num"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:background="@drawable/circle_orange_bg"
        android:gravity="center"
        android:text="20"
        android:textColor="@color/white"
        android:textSize="14sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/tv_num"
        android:gravity="center_vertical"
        android:paddingBottom="4dp"
        android:paddingTop="4dp">

        <LinearLayout
            android:id="@+id/et_bet_coin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_weight="3"
            android:background="@drawable/radio_white_bg"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_bet_coin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/gray_xx"/>

            <View
                android:id="@+id/view_gb"
                style="@style/StyleVerticalLineView"
                android:layout_margin="4dp"
                android:background="@color/orange"/>
        </LinearLayout>

        <EditText
            android:id="@+id/et_bet_amount"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_weight="3"
            android:background="@drawable/radio_white_bg"
            android:gravity="center"
            android:inputType="number"
            android:textColor="@color/gray_xx"
            android:textCursorDrawable="@null"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_odds"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_weight="2"
            android:gravity="center"
            android:text="997"
            android:textColor="@color/gray_xx"/>

        <TextView
            android:id="@+id/tv_times_01"
            style="@style/StylesBetTimesBtn1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/betting_01_times"/>

        <TextView
            android:id="@+id/tv_times_05"
            style="@style/StylesBetTimesBtn1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/betting_05_times"/>

        <TextView
            android:id="@+id/tv_times_10"
            style="@style/StylesBetTimesBtn1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/betting_100_times"/>
    </LinearLayout>

    <View
        style="@style/StyleHorizontalLineView"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
